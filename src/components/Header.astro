---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Developer', href: 'https://mxasraful.netlify.app' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <img height="100" width="100" src="https://raw.githubusercontent.com/asrafuls/Paikpara-Royal-Furniture/refs/heads/main/public/Black%20Gold%20Luxury%20and%20Vintage%20Royal%20Hotel%20Logo_20250222_170746_0000.png"/>
    </a>
<h2 color="white" >PAIKPARA ROYEL FURNITURE</h2>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
